define host {
<% if @use -%>
        use <%= @use %>
<% end -%>
        host_name <%= @host_name %>
<% if @real_address -%>
        address <%= @real_address %>
<% end -%>
<% unless @hostgroups.empty? -%>
        hostgroups <%= @hostgroups.join(",") %>
<% end -%>
<% if @host_alias -%>
        alias <%= @host_alias %>
<% end -%>
<% unless @contact_groups.empty? -%>
        contact_groups <%= @contact_groups.join(",") %>
<% end -%>
<% unless @parents.empty? -%>
        parents <%= @parents.join(",") %>
<% end -%>
<% if @notifications_enabled -%>
        notifications_enabled <%= @notifications_enabled %>
<% end -%>
<% if @event_handler_enabled -%>
        event_handler_enabled <%= @event_handler_enabled %>
<% end -%>
<% if @flap_detection_enabled -%>
        flap_detection_enabled <%= @flap_detection_enabled %>
<% end -%>
<% if @failure_prediction_enabled -%>
        failure_prediction_enabled <%= @failure_prediction_enabled %>
<% end -%>
<% if @process_perf_data -%>
        process_perf_data <%= @process_perf_data %>
<% end -%>
<% if @retain_status_information -%>
        retain_status_information <%= @retain_status_information %>
<% end -%>
<% if @retain_nonstatus_information -%>
        retain_nonstatus_information <%= @retain_nonstatus_information %>
<% end -%>
<% if @check_command -%>
        check_command <%= @check_command %>
<% end -%>
<% if @max_check_attempts -%>
        max_check_attempts <%= @max_check_attempts %>
<% end -%>
<% if @notification_interval -%>
        notification_interval <%= @notification_interval %>
<% end -%>
<% if @notification_period -%>
        notification_period <%= @notification_period %>
<% end -%>
<% if @notification_options -%>
        notification_options <%= @notification_options %>
<% end -%>
<% if @register -%>
        register <%= @register %>
<% end -%>
}

