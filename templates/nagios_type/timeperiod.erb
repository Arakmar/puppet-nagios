define timeperiod {
	timeperiod_name <%= @timeperiod_name %>
<% if @timeperiod_alias -%>
	alias <%= @timeperiod_alias %>
<% end -%>
<% if @monday -%>
	monday <%= @monday %>
<% end -%>
<% if @tuesday -%>
	tuesday <%= @tuesday %>
<% end -%>
<% if @wednesday -%>
	wednesday <%= @wednesday %>
<% end -%>
<% if @thursday -%>
	thursday <%= @thursday %>
<% end -%>
<% if @friday -%>
	friday <%= @friday %>
<% end -%>
<% if @saturday -%>
	saturday <%= @saturday %>
<% end -%>
<% if @sunday -%>
	sunday <%= @sunday %>
<% end -%>

}
