define hostextinfo {
<% unless @host_name.empty? -%>
	host_name <%= @host_name.join(",") %>
<% end -%>
<% unless @hostgroup_name.empty? -%>
	hostgroup_name <%= @hostgroup_name.join(",") %>
<% end -%>
<% unless @use.empty? -%>
	use <%= @use %>
<% end -%>
<% unless @notes.empty? -%>
	notes <%= @notes %>
<% end -%>
<% unless @icon_image.empty? -%>
	icon_image <%= @icon_image %>
<% end -%>
<% unless @icon_image_alt.empty? -%>
	icon_image_alt <%= @icon_image_alt %>
<% end -%>
<% unless @vrml_image.empty? -%>
	vrml_image <%= @vrml_image %>
<% end -%>
<% unless @statusmap_image.empty? -%>
	statusmap_image <%= @statusmap_image %>
<% end -%>
}

